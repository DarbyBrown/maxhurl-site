# EditorConfig: http://EditorConfig.org

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.ts,*.tsx]
indent_size = 2

[*.js,*.jsx]
indent_size = 2

[*.json]
indent_size = 2

[*.proto]
indent_size = 2
max_line_length = 120

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
